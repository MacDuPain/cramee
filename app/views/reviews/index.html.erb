<!-- app/views/reviews/index.html.erb -->
<h1>Livre d'Or</h1>

<% if user_signed_in? %>
<%= link_to 'Votre avis nous intéresse', new_review_path %>
<% else %>
  <%= link_to 'Connectez-vous pour laisser un avis', new_user_session_path %>
<% end %>

<% @reviews.each do |review| %>
  <div class="review">
    <h3><%= review.name %></h3>
    <p><%= review.content %></p>
    <% if user_signed_in? && current_user.is_admin? %>
      <%= link_to 'Supprimer', reviews_path, method: :delete, data: { confirm: 'Êtes-vous sûr?' } %>
    <% end %>
    <hr>
  </div>
<% end %>
