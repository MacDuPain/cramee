<!-- app/views/reviews/index.html.erb -->
<h1>Livre d'Or</h1>

<% if user_signed_in? %>
<%= link_to 'Votre avis nous intéresse', new_review_path %>
<% else %>
  <%= link_to 'Connectez-vous pour laisser un avis', new_user_session_path %>
<% end %>

<div class="row">
  <% @reviews.each do |review| %>
    <div class="col-md-4 mb-4">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= review.name %></h5>
          <p class="card-text"><%= review.content %></p>
        </div>
        <div class="card-footer">
          <small class="text-muted">Date de création : <%= review.created_at.strftime("%d %B %Y à %H:%M") %></small>
          <% if user_signed_in? && current_user.is_admin? %>
            <%= link_to 'Supprimer', reviews_path(review), method: :delete, class: "btn btn-danger btn-sm", data: { confirm: 'Êtes-vous sûr?' } %>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>
</div>

