<h1 class="fw-bold delivery-info-title">PANIER</h1>

<!-- Articles dans le panier -->
<% if @cart.items.any? %>
  <% @cart.items.each do |item| %>
    <div class="row align-items-center mb-4 cart-item">
      <!-- Image de l'article -->
      <div class="col-md-2 text-center">
        <img src="https://via.placeholder.com/100" alt="<%= item.name %>" class="img-fluid">
      </div>
      <!-- Titre et description de l'article -->
      <div class="col-md-3">
        <h5 class="mb-1"><%= item.name %></h5>
        <p style="color: #65635F;"><%= item.description %></p>
      </div>
      <!-- Prix de l'article -->
      <div class="col-md-2 text-center">
        <span class="price"><%= number_to_currency(item.price) %></span>
      </div>
      <!-- Bouton de mise à jour de la quantité -->
      <div class="col-md-2 text-center">
        <div class="quantity-box" data-item-id="<%= item.id %>" data-price="<%= item.price %>">
          <button type="button" class="btn btn-sm btn-secondary decrease-quantity" disabled>-</button>
          <span class="quantity">1</span>
          <button type="button" class="btn btn-sm btn-secondary increase-quantity">+</button>
        </div>
      </div>
      <!-- Bouton de suppression de l'article -->
      <div class="col-md-2 text-center">
        <%= form_tag cart_remove_item_path(@cart, item), method: :delete do %>
          <%= button_tag(type: 'submit', style: 'background: none; border: none; cursor: pointer') do %>
            <%= image_tag 'bin.png', alt: 'Poubelle', width: 20, height: 20 %>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>
<% else %>
  <p class="text-center">Votre panier est vide.</p>
<% end %>

<!-- Bouton pour passer la commande -->
<div class="row justify-content-center mb-4">
  <div class="col-md-6 text-center">
    <%= button_to 'PASSER COMMANDE', cart_confirm_order_path(@cart), method: :post, class: 'btn custom-submit-button w-100' %>
  </div>
</div>

<!-- Bouton pour continuer les achats -->
<div class="row justify-content-center">
  <div class="col-md-6 text-center">
    <%= link_to "CONTINUER VOS ACHATS", items_path, class: 'btn custom-submit-button w-100' %>
  </div>
</div>