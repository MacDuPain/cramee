<h1>Vos informations de livraison</h1>

<%= form_for [@order, @delivery_info] do |f| %>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="form-row">
    <div class="form-group col-md-6">
      <%= f.label :nom, "Nom" %>
      <%= f.text_field :nom, class: "form-control", required: true %>
    </div>
    <div class="form-group col-md-6">
      <%= f.label :prenom, "PrÃ©nom" %>
      <%= f.text_field :prenom, class: "form-control", required: true %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :adresse, "Adresse de livraison" %>
    <%= f.text_area :adresse, class: "form-control", rows: 3, required: true %>
  </div>
  <div class="form-row">
    <div class="form-group col-md-4">
      <%= f.label :code_postal, "Code postal" %>
      <%= f.text_field :code_postal, class: "form-control", required: true %>
    </div>
    <div class="form-group col-md-8">
      <%= f.label :ville, "Ville" %>
      <%= f.text_field :ville, class: "form-control", required: true %>
    </div>
  </div>
<%= link_to 'Checkout', checkout_create_path(order_id: @order.id, total: @order.items.sum(:price)), method: :get, class: 'btn btn-primary' %>
<% end %>