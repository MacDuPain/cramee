<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { class: "custom-form", method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autocomplete: "email", class: "input", required: true %>
  </div>

  <div class="actions">
    <%= f.submit "Envoi des instructions", class: "custom-submit-button" %>
  </div>
<% end %>

<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "custom-link" %>
<% end %>
<% if controller_name != 'sessions' %>
  <%= link_to "Se connecter", new_session_path(resource_name), class: "custom-link" %>
<% end %>
