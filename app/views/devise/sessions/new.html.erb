<h2 class="custom-h2">Connectez-vous</h2>
<h3 class="custom-h3">On est ravis de vous revoir !</h3>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "custom-form" }) do |f| %>
<%= render "devise/shared/error_messages", resource: resource %>
<%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <div class="field">
    <%= f.email_field :email, placeholder: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: "Mot de passe", autocomplete: "current-password" %>
  </div>
<% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="custom-text"><%= link_to "Mot de passe oubliÃ© ?", new_password_path(resource_name), class: "custom-link" %></p>
<% end %>

  <div class="actions">
    <%= f.submit "SE CONNECTER", class: "custom-submit-button" %>
  </div>
<% end %><br>

<p class="custom-text"><span>Pas de compte chez nous ?</span> 
<% if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "S'inscrire", new_registration_path(resource_name), class: "custom-link" %>
<% end %></p>

