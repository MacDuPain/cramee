<h1 class="text-center my-4">Forum</h1>
<h3 class="text-center my-4">La réponse à votre question est peut-être ici !</h3>

<% if user_signed_in? %>
  <%= link_to 'Ajouter un Topic', new_topic_path, class: "custom-submit-button mb-4" %>
<% else %>
  <%= link_to 'Connectez-vous pour ajouter un topic', new_user_session_path, class: "custom-link mb-4" %>
<% end %>
<div class="topics-container">
  <% @topics.each_with_index do |topic, index| %>
    <div class="card topic-card mb-4">
      <div class="card-body">
        <h2 class="card-title"><%= link_to topic.title, topic %></h2>
        <p class="card-text">Auteur: <%= topic.user.email %></p>
        <p class="card-text">Date de publication: <%= topic.created_at.strftime("%d/%m/%Y") %></p>
        <p class="card-text">Catégorie: <%= topic.topic_tags.map(&:name).join(", ") %></p>
      </div>
    </div>
    <% if index < @topics.length - 1 %>
      <div class="custom-line mb-4"></div>
    <% end %>
  <% end %>
<%= link_to 'Revenir à l\'accueil', root_path, class: "custom-link" %>

</div>
