<h1>Forum</h1>
<%= link_to 'Ajouter un Topic', new_topic_path, class: "btn btn-primary mb-4" %>
<div class="topics-container">
  <% @topics.each do |topic| %>
    <div class="card topic-card mb-4">
      <div class="card-body">
        <h2 class="card-title"><%= link_to topic.title, topic %></h2>
        <p class="card-text">Auteur: <%= topic.user.email %></p>
        <p class="card-text">Date de publication: <%= topic.created_at.strftime("%d/%m/%Y") %></p>
        <p class="card-text">Tags: <%= topic.topic_tags.map(&:name).join(", ") %></p>
      </div>
    </div>
  <% end %>
