<section class="py-5">
  <div class="container">
    <div class="row">
      <div class="col-md-10"> 
        <div class="d-flex">
          <div class="flex-shrink-0 me-5">
            <!-- Affichage de l'image -->
            <% if @item.image.attached? %>
              <%= image_tag url_for(@item.image.variant(resize: "500x500")), class: 'item-image', alt: @item.name %>
            <% end %>
          </div>
          <div class="flex-fill">
            <!-- Titre, prix, description -->
            <h2 class="fw-bold"><%= @item.name %></h2>
            <h3><%= number_to_currency(@item.price) %></h3>
            <p><%= @item.description %></p>

            <!-- Affichage des caractéristiques -->
            <div class="d-flex align-items-center">
              <%= image_tag 'Star 1.png', class: 'item-image', style: 'margin-bottom: 20px;' %> <!-- Utilisation de l'image -->
              <p class="custom-padding-sides text-muted">Pierre: Verte</p>
            </div>
            <div class="d-flex align-items-center">
              <%= image_tag 'black.png', class: 'item-image', style: 'margin-bottom: 18px;' %> <!-- Utilisation de l'image -->
              <p class="custom-padding-sides text-muted">Taille: Unique</p>
            </div>

            <!-- Bouton "Ajouter au panier" conditionnel -->
            <% if user_signed_in? %>
              <%= form_with url: cart_add_item_path(current_user.cart || current_user.create_cart, @item), method: :post, local: true do %>
                <%= submit_tag 'Ajouter au panier', class: 'btn btn-dark btn-lg' %>
              <% end %>
            <% else %>
              <%= link_to 'Connectez-vous pour ajouter au panier', new_user_session_path, class: 'btn btn-outline-dark' %>
            <% end %>
            <br>
            <div class="d-flex align-items-center">
              <%= image_tag 'prayer 2.png', class: 'me-2', style: 'margin-bottom: 5px;' %> <!-- Utilisation de l'image -->
              <p class="m-0">DELAIS DE FABRICATION</p>
            </div>
            <p>Tout nos bijoux sont fait mains et nécessitent des délais de fabrication importants (entre 1 et 3 semaines)</p>
            <!-- Bouton Edit -->
            <% if current_user&.is_admin? %>
              <%= link_to 'Edit', edit_item_path(@item), class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
